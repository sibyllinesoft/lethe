{
  "name": "lethe",
  "version": "1.0.0",
  "description": "AI-powered context manager with sophisticated NPX integration for conversation history search and retrieval",
  "private": false,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "type-check": "turbo type-check"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "turbo": "^1.13.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "ai",
    "context",
    "search",
    "conversation",
    "claude",
    "npx",
    "embeddings",
    "vector-search",
    "retrieval",
    "semantic-search",
    "developer-tools",
    "typescript",
    "nodejs"
  ],
  "author": "Nathan Rice <nathan.alexander.rice@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sibyllinesoft/lethe.git"
  },
  "homepage": "https://github.com/sibyllinesoft/lethe",
  "bugs": {
    "url": "https://github.com/sibyllinesoft/lethe/issues"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ]
}