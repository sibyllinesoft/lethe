% NeurIPS 2025 Style File
% Based on the official NeurIPS style with 2025 requirements

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{neurips_2025}[2025/01/01 NeurIPS 2025 Style]

% Page layout
\usepackage[letterpaper]{geometry}
\geometry{
  top=1in,
  bottom=1in,
  left=1.5in,
  right=1.5in
}

% Typography
\usepackage{times}
\usepackage{helvet}
\usepackage{courier}
\usepackage{microtype}

% Math packages
\usepackage{amsmath}
\usepackage{amsfonts}
\usepackage{amssymb}
\usepackage{amsthm}

% Figures and tables
\usepackage{graphicx}
\usepackage{booktabs}
\usepackage{array}
\usepackage{multirow}

% References and links
\usepackage[colorlinks=true,linkcolor=blue,citecolor=blue,urlcolor=blue]{hyperref}
\usepackage{url}

% Formatting
\usepackage{fancyhdr}
\usepackage{natbib}

% Page headers
\pagestyle{fancy}
\fancyhf{}
\fancyhead[C]{NeurIPS 2025 Submission (Anonymous)}
\fancyfoot[C]{\thepage}
\renewcommand{\headrulewidth}{0pt}

% Title formatting
\renewcommand{\maketitle}{%
  \begin{center}
    {\LARGE\bf \@title \par}
    \vskip 0.2in
    {\large \@author \par}
    \vskip 0.2in
  \end{center}
  \par
  \vskip 0.5in
}

% Section formatting
\renewcommand{\section}{\@startsection{section}{1}{\z@}%
                                   {-3.5ex \@plus -1ex \@minus -.2ex}%
                                   {2.3ex \@plus.2ex}%
                                   {\normalfont\Large\bfseries}}

\renewcommand{\subsection}{\@startsection{subsection}{2}{\z@}%
                                     {-3.25ex\@plus -1ex \@minus -.2ex}%
                                     {1.5ex \@plus .2ex}%
                                     {\normalfont\large\bfseries}}

% Abstract environment
\renewenvironment{abstract}%
{\begin{center}\textbf{Abstract}\end{center}\begin{quote}}%
{\end{quote}}

% Keywords command
\newcommand{\keywords}[1]{\textbf{Keywords:} #1}

% Theorems
\theoremstyle{plain}
\newtheorem{theorem}{Theorem}
\newtheorem{lemma}{Lemma}
\newtheorem{proposition}{Proposition}
\newtheorem{corollary}{Corollary}

\theoremstyle{definition}
\newtheorem{definition}{Definition}
\newtheorem{example}{Example}

\theoremstyle{remark}
\newtheorem{remark}{Remark}
\newtheorem{note}{Note}

% Algorithm environment (simplified)
\newcounter{algorithm}
\newenvironment{algorithm}[1][]%
{\refstepcounter{algorithm}%
 \begin{center}%
 \begin{minipage}{0.9\textwidth}%
 \rule{\textwidth}{0.4pt}%
 \textbf{Algorithm \thealgorithm} #1%
 \rule{\textwidth}{0.4pt}%
 \small}%
{\rule{\textwidth}{0.4pt}%
 \end{minipage}%
 \end{center}}

% Table notes environment
\newenvironment{tablenotes}%
{\begin{minipage}{\textwidth}\footnotesize}%
{\end{minipage}}

